{% extends  '::base.html.twig' %}

{% block sidebartitle %} Profil użytkownika{% endblock %}

{% block sidebaritems %}
              <li><a href="{{ path('ZubiUserBundle_homepage') }}">Dane użytkownika</a></li>  
              <li><a href="{{ path('ZubiUserBundle_private') }}">Ustawienia prywatności</a></li>
              <li class="active"><a href="{{ path('ZubiUserBundle_edituser') }}">Edytuj konto</a></li>
              <li><a href="{{ path('ZubiUserBundle_list') }}">Lista</a></li>              
{% endblock %}


{% block body %}
<h3> Edycja profilu użytkownika</h3>
<br>
<form action="{{ path('ZubiUserBundle_edituser') }}" method="post" novalidate="novalidate"{{ form_enctype(form) }}>
    {{ form_errors(form) }}
<div>
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
    <i class="icon-info-sign" id="info_email"></i>
</div>

<div>
    {{ form_label(form.kraj) }}
    {{ form_widget(form.kraj) }}
    <i class="icon-info-sign" id="info_kraj"></i>
</div>

<div>
    {{ form_label(form.miasto) }}
    {{ form_widget(form.miasto) }}
    <i class="icon-info-sign" id="info_miasto"></i>
</div>

<div class="input-min">
    {{ form_label(form.data_ur) }}

    {{ form_widget(form.data_ur.year, { 'attr': {'class': 'span1'} }) }}
    {{ form_widget(form.data_ur.month, { 'attr': {'class': 'span1'} }) }}
    {{ form_widget(form.data_ur.day, { 'attr': {'class': 'span1'} }) }}
    <i class="icon-info-sign" id="info_data_ur"></i>
</div>

    {{ form_rest(form) }}
<br>
    <input type="submit" class="btn-primary" value="Zmień" />
</form>

{% endblock %}

{% block javascript %}
    <script type="text/javascript">
    $('#info_email').popover({title: "E-mail", content: "Format: XXXX@XXXX.XX"});
    $('#info_kraj').popover({title: "Kraj", content: "Kraj, w którym znajduje się użytkownik"});
    $('#info_miasto').popover({title: "Miasto", content: "Miasto, w którym znajduje się użytkownik"});
    $('#info_data_ur').popover({title: "Data urodzenia", content: "Format: RRRR MM DD"});
</script>
{% endblock %}